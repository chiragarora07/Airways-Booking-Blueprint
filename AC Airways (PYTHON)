#Importing required modules.
import random

#Making required variables.
s=''
a=''
money=2000

#Function for winning ingame.
def win(x):
    global money 
    money=money+1000
    
#Function for loosing ingame.
def loose(x):
    global money
    money=money-250
    
#Making function for start screen.
def start(s):
        print("1 - Collect Money")
        print("2 - Check Balance")
        print("3 - Book AirWays Ticket")
        print("4 - Check Destinations.")
        print("Price - ₹10/km")
        print("Note-Make Sure your 'CapsLock' is off.")
        choice=int(input("Enter Your Choice - "))
        if choice == 1:
             x=''
             game(x)
        elif choice == 2:
             print("Your Current Balance:",money)
             back(a)
        elif choice == 3:
             b=''
             booking(b)
        elif choice == 4:
             p=''
             places(p)

#Making function for game.    
def game(x):
        
        x=str(input("Choose One(Stone/Paper/Scissor): "))
     
        bot_choice=random.randint(1,4)
        
        if bot_choice == 1:
            bot_choice='stone'
        elif bot_choice == 2:
            bot_choice='paper'
        elif bot_choice == 3:
            bot_choice='scissor' 
            
        if x == 'stone' and bot_choice == 'stone':
            print("Its a Tie! Computer also Chose",bot_choice)
        elif x == 'scissor' and bot_choice == 'scissor':
            print("Its a Tie! Computer also Chose",botchoice)
        elif x == 'paper' and bot_choice == 'paper':
            print("Its a Tie! Computer also Chose",botchoice)
        elif x == 'stone' and bot_choice == 'scissor':
            print('You Won! and got ₹1000')
            win(money)
        elif x == 'stone' and bot_choice == 'paper':
            print("You Lost! and Lost ₹250")
            loose(money)
        elif x == 'paper' and bot_choice == 'scissor':
            print("You Lost! and Lost ₹250")
            loose(money)
        elif x == 'paper' and bot_choice == 'stone':
            print("You Won! and got ₹1000")
            win(money)
        elif x == 'scissor' and bot_choice == 'paper':
            print("You Won! and got ₹1000")
            win(money)
        elif x == 'scissor' and bot_choice == 'stone':
            print("You Lost! and Lost ₹250")
            loose(money)
                        
        play_again=str(input("Do You Want To Play Again?(y/n)"))
        if play_again == 'y':
            game(x)
        else:
            start(s)
          
#Making Function for ticket booking.
def booking(b):
        boarding=str(input("Enter Boarding Place: "))    
